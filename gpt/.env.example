# ================================================
# CONFIGURACIÓN DE OPENAI
# ================================================

# Tu API Key de OpenAI (obtener en https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxx

# Modelo de IA a utilizar
AI_MODEL=gpt-3.5-turbo

# ================================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================================

# Puerto en el que se ejecutará el servidor Flask
PYTHON_PORT=5000

# Host del servidor (0.0.0.0 para aceptar conexiones externas)
PYTHON_HOST=0.0.0.0

# Modo debug (True para desarrollo, False para producción)
DEBUG=False

# ================================================
# CONFIGURACIÓN DE LOGS
# ================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
